/* pages/person/person.wxss */
/* page margin setting */
.page{
margin: 0rpx 10rpx 0rpx 10rpx;
}
/* banner setting */
.pic{
width: 100%;
}
/* bottom margin setting */
.body{
margin: 50rpx 10rpx 0rpx 10rpx;
display: flex;
flex-direction: row;
}
/* left right setting */
.body view{
width: 300rpx;
height: 600rpx;
align-items: center;
}
/* left setting */
.left{
flex: 1;
display: flex;
flex-direction: column;
}
/* left container setting */
.left view{
width: 200rpx;
height: 200rpx;
}
/* image text ratio setting */
.l1{
flex: 3;
}
.l2{
flex: 1;
}
.l3{
flex: 3;
}
.l4{
flex: 1;
}
.right{
flex: 1;
display: flex;
flex-direction: column;
}
.right view{
width: 200rpx;
height: 200rpx;
}
/* icon setting */
.pic1{
width: 150rpx;
height: 150rpx;
border-radius: 50%;
border: 1px solid black;
}
.foot{
background-color: lightgrey;
text-align: center;
}